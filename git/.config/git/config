[user]
    name = Zahid Kizmaz
    username = zahidkizmaz
    email = tech@zahid.rocks

[core]
    editor = nvim

[pager]
    difftool = true

[merge]
    conflictStyle = diff3
    tool = nvimdiff

[mergetool]
    keepBackup = false

[diff]
    tool = difftastic

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true

[interactive]
    diffFilter = delta --color-only

[blame]
    date = short

[alias]
    # show different commits between branches
    branchdiff = log --graph --left-right --cherry-pick --oneline
