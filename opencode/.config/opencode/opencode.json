{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "coder": {
          "name": "coder"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "context7-mcp"
      ],
      "enabled": true
    }
  }
}
